<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:id="@+id/exercise_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/element_exercise_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg_purple">

        <TextView
            android:id="@+id/exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="@dimen/list_item"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/exercise_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/exercise_name"
            app:layout_constraintBottom_toBottomOf="@id/exercise_name"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/number_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="@dimen/body_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" x "
                android:textColor="@color/white"
                android:textSize="@dimen/body_text"/>

            <TextView
                android:id="@+id/low_limit_rep_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="@dimen/body_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/body_text"/>

            <TextView
                android:id="@+id/high_limit_rep_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="@dimen/body_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" @ "
                android:textColor="@color/white"
                android:textSize="@dimen/body_text"/>

            <TextView
                android:id="@+id/target_rpe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="@dimen/body_text"/>

            <ImageView
                android:id="@+id/exercise_checked"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/check"
                android:layout_marginLeft="15dp"
                android:tint="@color/white"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
