<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="GYM \nCOMPANION"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="40"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60">

            <EditText
                android:id="@+id/register_page_email"
                android:lines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/input_text"
                android:background="@drawable/rounded_bg_gray"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:padding="10dp"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/register_page_username"/>

            <EditText
                android:id="@+id/register_page_username"
                android:lines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/input_text"
                android:background="@drawable/rounded_bg_gray"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:padding="10dp"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintTop_toBottomOf="@id/register_page_email"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/register_page_password_1"/>

            <EditText
                android:id="@+id/register_page_password_1"
                android:lines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/input_text"
                android:background="@drawable/rounded_bg_gray"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:padding="10dp"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintTop_toBottomOf="@id/register_page_username"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/register_page_password_2"/>

            <EditText
                android:id="@+id/register_page_password_2"
                android:lines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Repeat Password"
                android:inputType="textPassword"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/input_text"
                android:background="@drawable/rounded_bg_gray"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:padding="10dp"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintTop_toBottomOf="@id/register_page_password_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/register_page_register_button"/>

            <Button
                android:id="@+id/register_page_register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:textColor="@color/white"
                android:background="@drawable/rounded_bg_purple"
                app:layout_constraintTop_toBottomOf="@id/register_page_password_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/already_have_account_button"/>

            <Button
                android:id="@+id/already_have_account_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Already have an Account?"
                android:textColor="@color/purple"
                android:textSize="@dimen/input_text"
                android:background="@null"
                app:layout_constraintTop_toBottomOf="@id/register_page_register_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>